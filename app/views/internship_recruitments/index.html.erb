<% provide :title, "Internship Recruitments" %>

<h1>Internship Recruitments</h1>

<div class="row">
	<%= form_tag(internship_recruitments_path, :method => "get", id: "search-form") do %>
		<div class="input-group">
	    	<%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search..." %>
		    <span class="input-group-btn">
		    	<%= button_tag "Search", :name => nil, class: "btn btn-default" %>
		    </span>
	    </div>
	<% end %>
</div>


<div class="nav pull-right">
<% if can? :create, InternshipRecruitment %>
	<%= link_to "Create Internship Recruitment", new_internship_recruitment_path, class: "btn btn-primary" %>
<% end %>
</div>
<br>
<br>
<% if @internship_recruitments.any? %>
	<ol class="internship-recruitments">
		<%= render @internship_recruitments %>
	</ol>
<% end %>

<%= will_paginate %>