<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "SIE Internship Management System", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Help",   help_path %></li>
        <% if current_user %>
          <% if current_user.role? :admin %>
            <li><%= link_to "Dashboard", rails_admin.dashboard_path %></li>
          <% end %>
          <li><%= link_to "Internship Subject", internship_recruitments_path %></li>
          <li><%= link_to "Internship Registration", internship_registrations_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_registration_path %></li>
              <% if current_user.role? :student %>
                  <li><%= link_to "Curriculum Vitae", user_curriculum_vitaes_path(current_user) %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>