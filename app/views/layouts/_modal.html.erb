<div id= <%="registration-modal-#{internship_recruitment.id}" %> class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Internship Decision To <%= internship_recruitment.title %></h4>
      </div>
      
      <div class="modal-body">
       <%= form_for @internship_assignment do |f| %>
          <%= render "shared/error_messages", object: @internship_assignment %>
            <%= f.hidden_field :internship_recruitment_id, value:  internship_recruitment.id %>
            <%= f.label :start_date, "Start Date" %>
            <%= f.date_select :start_date, start_year: Date.current.year, :class => 'datepicker' %>
            <%= f.label :end_date, "Due Date" %>
            <%= f.date_select :end_date, start_year: Date.current.year %> 
            <%= f.label :lecturer %>
            <%= f.select :lecturer_id, User.lecturer.map{|user| [user.name, user.id]}, class: "form-control" %>
            <%= f.fields_for :assignments do |builder| %>
              <%= render "layouts/assignment_fields" , f: builder %>
            <% end %>
      </div>
      <div class="modal-footer">
        <div class="action">
          <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
      <% end %>

        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
