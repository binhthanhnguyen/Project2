<div class="panel panel-default">
  <div class="panel-heading">Evaluation for <%= @assignment.student.name %> </div>
  <div class="panel-body">
  		<div class="panel panel-info">
		  <div class="panel-heading"> The technical level </div>
		  <div class="panel-body">
		  	<table class="table table-striped table-hover">
				<thead>
					<th>Evaluation Criteria</th>
					<th>Point</th>
					<th>Comment</th>
				</thead>

				<tbody>
					<% @evaluation.evaluation_criteria.where(:criterion_id => 1..7).each do |evaluation_criteria| %>
					
					<tr>
					
						<% if !evaluation_criteria.criterion.nil? %>
						<td>
							<%= evaluation_criteria.criterion.title %>
						</td>
						<td class="col-md-2">
							<%= evaluation_criteria.point %>
						</td>

						<td class="col-md-4">
							<%= evaluation_criteria.comment %>
